---
const { title, subtitle, type, oneButton, lastSection, color } = Astro.props;
---

<section
    class="landing-section flex flex-col absolute mt-24 sm:mt-28 left-0 right-0 z-10 h-screen overflow-hidden"
    data-header-color={color}
>
    <div class="flex items-center flex-col">
        <h2
            class=`font-medium lg:text-[40px] md:text-[38px] text-[36px] ${type=== "video" ? "text-white" : "text-[#171a20]" }`
        >
            {title}
        </h2>
        <a
            href="#"
            class=`underline ${type=== "video" ? "text-white" : "text-[#171a20]"}`
            >{subtitle}</a
        >
    </div>

    <div class="flex justify-center gap-5 absolute bottom-44 right-0 left-0">
        {
            !oneButton && (
                <>
                    <button
                        class={`${
                            type === "video"
                                ? "bg-white text-black-500"
                                : "bg-[#2f323a] text-white font-bold"
                        } px-12 py-2 rounded-md text-[14px]`}
                    >
                        {type === "video"
                            ? "Entrega más rápida"
                            : "Pedido Personalizado"}
                    </button>
                    <button
                        class={`${
                            type === "video"
                                ? "bg-grayTransparent text-white font-bold backdrop-blur-sm"
                                : "bg-[#fff] text-black-500"
                        } px-12 py-2 rounded-md text-[14px]`}
                    >
                        {type === "video"
                            ? "Pedído Personalizado"
                            : "Prueba de conducción"}
                    </button>
                </>
            )
        }
        {
            oneButton && !lastSection && (
                <button
                    class={`${
                        type === "video"
                            ? " bg-transparent text-white border-2 border-white px-12"
                            : "bg-grayTransparent text-white font-bold backdrop-blur-sm px-24 "
                    } py-2 rounded-md text-[14px] `}
                >
                    {type === "video" ? "Prueba de conducción" : "Saber más"}
                </button>
            )
        }
        {
            lastSection && (
                <>
                    <footer class="flex flex-col items-center">
                        <button class=" bg-[#fff] text-black-500 px-16 py-2 rounded-md text-[14px]">
                            Comprar ahora
                        </button>
                        <ul class="flex justify-center [&>li>a]:inline-block [&>li>a]:px-3 text-[#ececec] mt-14 text-[12px]">
                            <li>
                                <a href="#">Tesla © 2024</a>
                            </li>
                            <li>
                                <a href="#">Privacidad y legal</a>
                            </li>
                            <li>
                                <a href="#">Contacto</a>
                            </li>
                            <li>
                                <a href="#">Noticias</a>
                            </li>
                            <li>
                                <a href="#">Seguir informado</a>
                            </li>
                            <li>
                                <a href="#">Localizacion de tiendas</a>
                            </li>
                        </ul>
                    </footer>
                </>
            )
        }
    </div>
</section>
